<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Show Activity"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="#ff000000"
            android:layout_gravity="center"
            android:gravity="center" 
          />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="163.0dp"
            android:id="@+id/linearLayout2"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#ff546e7a">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="49.0dp"
                android:id="@+id/user"
                android:background="#ffffffff"
                android:layout_margin="10dp"
                android:hint="User"
                android:padding="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:id="@+id/code"
                android:background="#ffffffff"
                android:layout_margin="10dp"
                android:text="Code"
                android:padding="15dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="113.5dp"
            android:id="@+id/linearLayout3"
            android:layout_margin="10dp"
            android:background="#ff263238"
            android:gravity="center">
            <Button
                android:text="All"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/all"
                android:layout_margin="10dp"
                android:backgroundTint="#ffffffff"
                android:textColor="#ff000000"
                android:padding="15dp"
                android:textSize="15dp" />
            <Button
                android:text="All By Person"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/allperson"
                android:layout_margin="10dp"
                android:background="#ffffffff"
                android:backgroundTint="#ffffffff"
                android:textColor="#ff000000"
                android:padding="15dp"
                android:textSize="15dp" />             
              
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="113.5dp"
            android:id="@+id/linearLayout5"
            android:layout_margin="10dp"
            android:background="#ff263238"
            android:gravity="center">            
            <Button
                android:text="Control"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/control"
                android:layout_margin="10dp"
                android:background="#ffffffff"
                android:backgroundTint="#ffffffff"
                android:textColor="#ff000000"
                android:padding="15dp"
                android:textSize="15dp" />
             <Button
                android:text="Logout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/logout"
                android:layout_margin="10dp"
                android:background="#ffffffff"
                android:backgroundTint="#ffffffff"
                android:textColor="#ff000000"
                android:padding="15dp"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="163.0dp"
            android:id="@+id/linearLayout4"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#ff546e7a">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/showall"
                android:background="#ffffffff"
                android:layout_margin="10dp"
                android:text="Show All"
                android:padding="15dp"
                android:gravity="center" />
            
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>